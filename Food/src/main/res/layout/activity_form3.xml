<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#9bdedf">

        <Button
            android:text="Back"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#9bdedf"
            android:textColor="#0d6162"
            android:id="@+id/button4"
            android:onClick="onClickLast"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Information 3/3"
            android:textSize="20sp"
            android:textColor="#0d6162"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView0" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your BMI index:"
            android:textSize="18sp"
            android:textColor="#0d6162"
            android:id="@+id/textViewBmi"
            android:layout_marginLeft="60dp"
            />

        <TextView
            android:text="20.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:textSize="16sp"
            android:id="@+id/bmi_index"
            android:textColor="#696969"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ideal weight:"
            android:textSize="18sp"
            android:textColor="#0d6162"
            android:id="@+id/ideaWeight"
            android:layout_marginLeft="60dp"
            />

        <TextView
            android:text="20.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:textSize="16sp"
            android:textColor="#696969"
            android:id="@+id/idea_weight"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily calories:"
            android:textSize="18sp"
            android:textColor="#0d6162"
            android:id="@+id/textViewDay"
            android:layout_marginLeft="60dp"
            />

        <TextView
            android:text="20.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:textSize="16sp"
            android:textColor="#696969"
            android:id="@+id/daily_calories"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:layout_width="90dp"
        android:layout_height="30.5dp"
        android:layout_marginTop="150dp"
        android:text="Finish"
        android:background="#05acaf"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:id="@+id/finishButton"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickNext"/>



</LinearLayout>