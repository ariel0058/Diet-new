<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#05acaf">

        <Button
            android:text="Back"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#05acaf"
            android:textColor="#ffffff"
            android:id="@+id/button6"
            android:onClick="onClickLast"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#0d6162"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView1" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="#cdeeef">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="88dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:text="Calories left today:"
                android:textColor="#0d6162"
                android:textSize="18dp"
                android:id="@+id/calorieLeftTv"

                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="300 kcal"
                android:layout_width="50dp"
                android:textSize="17dp"
                android:textColor="#ff3333"
                android:layout_height="wrap_content"
                android:id="@+id/textView20"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="400dp"
            android:layout_height="120dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="160dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total: "
                    android:textColor="#696969"
                    android:textSize="14dp"
                    android:id="@+id/targetTv" />

                <TextView
                    android:text="1400 kcal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView21"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>

             <LinearLayout
                 android:orientation="horizontal"
                 android:layout_width="160dp"
                 android:layout_height="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taken: "
                    android:textColor="#696969"
                    android:textSize="14dp"
                    android:id="@+id/takenTv" />

                <TextView
                    android:text="1100 kcal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"/>

             </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="100dp"
        android:background="#ffffff">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#0d6162"
            android:id="@+id/breakfastTv" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#0d6162"
            android:id="@+id/lunchTv" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Dinner"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#0d6162"
            android:id="@+id/dinnerTv" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="66dp"
        android:background="#e0e0e0"
        android:layout_height="55dp">

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/btn_main_bf"
            android:layout_marginLeft="30dp"
            android:background="@drawable/breakfast"
            android:scaleType="fitXY"

            />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/btn_main_lunch"
            android:layout_marginLeft="30dp"
            android:background="@drawable/lunch"
            android:scaleType="fitXY" />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/btn_main_dinner"
            android:background="@drawable/dinner"
            android:scaleType="fitXY" />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_main_exe"
            android:background="@drawable/newday"
            android:scaleType="fitXY" />

    </LinearLayout>





 </LinearLayout>