<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#9bdedf">

        <Button
            android:text="Back"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#9bdedf"
            android:textColor="#0d6162"
            android:id="@+id/button5"
            android:onClick="onClickLast"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Profile"
            android:textSize="20sp"
            android:textColor="#0d6162"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView6" />
    </RelativeLayout>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:srcCompat="@drawable/panda3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:id="@+id/imageView2" />

    <TextView
        android:text="username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="145dp"
        android:textColor="#000000"
        android:id="@+id/username" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="70dp">

        <TextView
            android:text="Gender:"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18dp"
            android:id="@+id/textView8" />

        <TextView
            android:text="Male"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textColor="#696969"
            android:textSize="17dp"
            android:id="@+id/textView9" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="70dp">

        <TextView
            android:text="Age:"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18dp"
            android:id="@+id/textView18" />

        <TextView
            android:text="20"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textColor="#696969"
            android:textSize="17dp"
            android:id="@+id/textView19" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="70dp">

        <TextView
            android:text="Height:"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18dp"
            android:id="@+id/textView10" />

        <TextView
            android:text="160 cm"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textColor="#696969"
            android:textSize="17dp"
            android:id="@+id/textView11" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="70dp">

        <TextView
            android:text="Current weight:"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18dp"
            android:id="@+id/textView12" />

        <TextView
            android:text="60 lb"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#696969"
            android:textSize="17dp"
            android:id="@+id/textView13" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="70dp">

        <TextView
            android:text="Ideal weight:"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18dp"
            android:id="@+id/textView14" />

        <TextView
            android:text="50 lb"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textColor="#696969"
            android:textSize="17dp"
            android:id="@+id/textView15" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="70dp">

        <TextView
            android:text="Daily calorie:"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18dp"
            android:id="@+id/textView16" />

        <TextView
            android:text="1400 kcal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#696969"
            android:textSize="17dp"
            android:id="@+id/textView17" />

    </LinearLayout>

    <Button
        android:layout_width="90dp"
        android:layout_height="30.5dp"
        android:layout_marginTop="70dp"
        android:text="Log out"
        android:background="#05acaf"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:id="@+id/logOutButton"
        android:onClick="onClickLogout"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>